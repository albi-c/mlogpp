Block message1
Block display1

const PM = 22
const DS = 176
num dsize = DS / PM

num seed = 0
while (true) {
    print(seed)
    printflush(message1)

    for (num y = 0; y < dsize; y += 1) {
        for (num x = 0; x < dsize; x += 1) {
            num val = noise(x + seed, y + seed)
            val = abs(val)
            val *= 255
            draw.color(val, val, val, 255)
            draw.rect(x * PM, y * PM, PM, PM)
        }
    }
    drawflush(display1)

    seed += 1
}
